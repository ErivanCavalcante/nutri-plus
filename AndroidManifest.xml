<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.indieapps.nutriplus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        
        <activity
            android:name=".activities.ListaPacienteActivity"
            android:label="NutriPlus"
            android:windowSoftInputMode="adjustPan" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".activities.AddPacienteActivity" android:label="Paciente" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activities.AtualizaPacienteActivity" android:label="Paciente" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activities.ListaTacoActivity" android:label="Lista Taco" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activities.AddAlimentoActivity" android:label="Alimento" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activities.AtualizaAlimentoActivity" android:label="Alimento" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activities.ListaDietaActivity" android:label="Dieta" android:windowSoftInputMode="adjustPan"/>
        
    </application>

</manifest>
